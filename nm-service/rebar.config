{{=@@ @@=}}
{plugins, [rebar3_run]}.

{cover_enabled, true}.
{dialyzer, [{plt_extra_apps, []},
            {warnings, [unknown]}]}.
{erl_opts, [debug_info]}.
{deps, []}.
{shell, [{apps, [@@name@@]}]}.

{relx, [{release, {@@name@@, "@@version@@"},
         [@@name@@, inets, sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]}.
